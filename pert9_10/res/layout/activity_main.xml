<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:layout_column="3"
    android:background="#FFFFFF"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/home"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/styletombol2"
            android:src="@drawable/tambah"/>

        <Button
            android:id="@+id/inputbtn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@color/styletombol2"
            android:text="Input Data"
            android:textColor="#ffffff"
            android:textSize="25dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/styletombol3"
            android:src="@drawable/edit"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:id="@+id/editbtn"
            android:background="@drawable/styletombol3"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:text="Edit Data"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/styletombol1"
            android:src="@drawable/delete"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:id="@+id/hapusbtn"
            android:background="@drawable/styletombol1"
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:text="Hapus Data"/>

    </LinearLayout>

</LinearLayout>